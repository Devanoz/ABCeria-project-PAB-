<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.leaderboard.LeaderBoard"
    android:background="#A4CE3A"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LeaderBoard"
        android:gravity="center"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:background="@drawable/leaderboard_time_section"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/leaderboard_btn_mingguIni"
            android:layout_width="110dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/leaderboard_button_wrapper"
            android:text="minggu ini"
            android:gravity="center"
            android:textSize="12sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/leaderboard_btn_bulanIni"
            android:layout_width="110dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/leaderboard_button_wrapper"
            android:text="bulan ini"
            android:gravity="center"
            android:textSize="10sp" />



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/leaderboard_btn_semuaWaktu"
            android:layout_width="110dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/leaderboard_button_wrapper"
            android:text="Semua Waktu"
            android:textSize="10sp" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <LinearLayout
            android:id="@+id/leaderboard_ll_top1"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:background="@drawable/leaderboard_top1"
            android:layout_marginStart="60dp"
            android:backgroundTint="#A8E890"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="30dp"
            android:orientation="vertical">

<!--            <androidx.cardview.widget.CardView-->
<!--                android:id="@+id/leaderboard_cv_imgView_user"-->
<!--                app:cardCornerRadius="50dp"-->
<!--                android:layout_width="60dp"-->
<!--                android:layout_height="60dp"-->
<!--                android:layout_marginTop="10dp"-->
<!--                android:layout_marginLeft="10dp"-->
<!--                app:layout_constraintStart_toStartOf="parent"-->
<!--                app:layout_constraintTop_toTopOf="parent">-->

<!--                <ImageView-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="match_parent"-->
<!--                    android:src="@drawable/user_profile_leaderboard"-->
<!--                    />-->

<!--            </androidx.cardview.widget.CardView>-->

            <TextView
                android:id="@+id/leaderboard_tv_top2_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="syuh"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="50dp"
                />

            <TextView
                android:id="@+id/leaderboard_tv_top2_points"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="190 pts"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="10dp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/leaderboard_ll_top2"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:background="@drawable/leaderboard_top1"
            android:layout_marginBottom="30dp"
            android:backgroundTint="#CFFF8D"
            app:layout_constraintStart_toEndOf="@+id/leaderboard_ll_top1"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/leaderboard_tv_top1_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="syuh"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="50dp"
                />

            <TextView
                android:id="@+id/leaderboard_tv_top1_points"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="190 pts"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/leaderboard_ll_top3"
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:background="@drawable/leaderboard_top1"
            android:layout_marginBottom="30dp"
            android:backgroundTint="#749F82"
            app:layout_constraintStart_toEndOf="@+id/leaderboard_ll_top2"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/leaderboard_tv_top3_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="syuh"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                />

            <TextView
                android:id="@+id/leaderboard_tv_top3_points"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="190 pts"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/leaderboard_list_wrapper"
        android:padding="20dp"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/leaderboard_rv_leaderboard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            />

    </LinearLayout>


</LinearLayout>
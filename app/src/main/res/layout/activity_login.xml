<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.auth.Login"
    android:background="#8FBC1C"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/login_wrapper_field"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Masukin akunmu ya.."
            android:layout_marginTop="40dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:paddingLeft="15dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/input_login_wrapper"
            android:drawableStart="@drawable/ic_account_20"
            android:drawablePadding="18dp"
            android:hint="Nama Pengguna"
            android:paddingLeft="15dp"
            android:textColorHint="#A6000000" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/input_login_wrapper"
            android:drawableStart="@drawable/ic_lock_20"
            android:drawablePadding="15dp"
            android:hint="Nama Pengguna"
            android:paddingLeft="15dp"
            android:textColorHint="#A6000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="Lupa Kata  ?"
            android:paddingLeft="20dp"
            android:textColor="#6C5ECF"
            />


    </LinearLayout>

</LinearLayout>
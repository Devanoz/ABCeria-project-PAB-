<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detail_materi_cl_materi"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:paddingVertical="10dp"
    android:layout_marginHorizontal="20dp"
    android:layout_centerHorizontal="true"
    android:background="@drawable/kuning"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/list_cv_imgView_materi"
        app:cardCornerRadius="5dp"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginVertical="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/user_profile_leaderboard"
            />

    </androidx.cardview.widget.CardView>



    <TextView
        android:id="@+id/list_tv_materi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/list_cv_imgView_materi"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:text="Materi 1"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/list_tv_dscmateri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/list_tv_materi"
        app:layout_constraintStart_toEndOf="@+id/list_cv_imgView_materi"
        android:text="Mari menghitung jumlah buah!"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
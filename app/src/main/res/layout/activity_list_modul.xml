<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModulMateri.ListModul"
    android:background="#A4CE3A">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="900dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/transparant"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:paddingLeft="20dp"
                android:text="Materi"
                android:textColor="@color/black"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="20dp"
                android:text="Tingkatkan capaian belajar dengan mengerjakan modul di bawah ya! ☺️ "
                android:textColor="@color/black"
                android:textSize="15sp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:columnCount="2"
                android:rowCount="3"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"
                android:layout_weight="8"
                android:padding="14dp"
                >
                <!--row 1 col 1-->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="1dp"
                    app:cardBackgroundColor="#F0FF42"
                    app:cardCornerRadius="20dp">
                    <LinearLayout
                        android:layout_width="118dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="133dp"
                            app:srcCompat="@drawable/modul_1" />
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="17dp"
                            android:background="@drawable/transparant"
                            android:text="Modul 1">
                        </Button>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <!--row 1 col 2-->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="1dp"
                    app:cardBackgroundColor="#F0FF42"
                    app:cardCornerRadius="20dp">

                    <LinearLayout
                        android:layout_width="118dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="133dp"
                            app:srcCompat="@drawable/modul_2" />
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Modul 2"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="17dp"
                            android:background="@drawable/transparant" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <!--row 2 col 1-->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    app:cardBackgroundColor="#F0FF42"
                    app:cardCornerRadius="20dp">
                    <LinearLayout
                        android:layout_width="118dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="133dp"
                            app:srcCompat="@drawable/modul_3" />
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Modul 3"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="17dp"
                            android:background="@drawable/transparant" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <!--row 2 col 2-->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    app:cardBackgroundColor="#F0FF42"
                    app:cardCornerRadius="20dp">
                    <LinearLayout
                        android:layout_width="118dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="133dp"
                            app:srcCompat="@drawable/modul_4" />
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Modul 4"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="17dp"
                            android:background="@drawable/transparant" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <!--row 3 col 1-->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    app:cardBackgroundColor="#F0FF42"
                    app:cardCornerRadius="20dp">
                    <LinearLayout
                        android:layout_width="118dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="133dp"
                            app:srcCompat="@drawable/modul_5" />
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Modul 5"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="17dp"
                            android:background="@drawable/transparant" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <!--row 3 col 2-->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    app:cardBackgroundColor="#F0FF42"
                    app:cardCornerRadius="20dp">
                    <LinearLayout
                        android:layout_width="118dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="133dp"
                            app:srcCompat="@drawable/modul_6" />
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Modul 6"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="17dp"
                            android:background="@drawable/transparant" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </GridLayout>



        </LinearLayout>

    </LinearLayout>




</ScrollView>